<%= link_to 'Back', posts_path, class: 'btn btn-default' %>


<div class='row'>
	<div class='col-md-offset-2 col-md-8'>
		<div class='panel panel-primary'>
			<div class='panel-heading center'>
				<%= image_tag @post.image.url, class: 'img-responsive' %>
			</div>
			<div class='panel-body'>

				<p>
					<strong><h3 class="center"><%= @post.title %></h3></strong>
					<p><strong><em>by <%= @post.user.name if @post.user %></em></strong></p>
				  	<blockquote><p><%= @post.body %></p></blockquote>
				  	

			        <% if @post.category == 'Nutrition' %>
			          <div id='nutritionP'>
			            <strong><%= @post.category %></strong>
			          </div>
			        <% elsif @post.category == 'Recovery' %>
			          <div id='recoveryP'>
			            <strong><%= @post.category %></strong>
			          </div>
			        <% elsif @post.category == 'Training' %>
			          <div id='trainingP'>
			            <strong><%= @post.category %></strong>
			          </div>
			        <% elsif @post.category == 'Inspiration' %>
			          <div id='inspirationP'>
			            <strong><%= @post.category %></strong>
			          </div>
			        <% else %>
			            <strong><%= @post.category %></strong>
			        <% end %>



				  	<br>
				  
				</p>
				<% if current_user.try(:admin?) %>
					<%= link_to edit_post_path(@post), class: 'btn btn-xs btn-warning' do %>
		              <span class="glyphicon glyphicon-edit"></span>
		              Edit
		            <% end %>
		            <%= link_to @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' do %>
		              <span class="glyphicon glyphicon-trash"></span>
		              Delete
		            <% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>
